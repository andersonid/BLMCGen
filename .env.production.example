# Production Environment Variables
# Copy this file to .env.production and update with your values

# Database Configuration
DATABASE_URL=postgresql://username:password@your-db-host:5432/bmcdb
POSTGRES_DB=bmcdb
POSTGRES_USER=bmcuser
POSTGRES_PASSWORD=your-super-secure-password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-production-min-32-chars

# Server Configuration
NODE_ENV=production
PORT=3001

# Frontend URL
FRONTEND_URL=https://yourdomain.com

# Redis Configuration
REDIS_URL=redis://your-redis-host:6379

# SSL Configuration (if using custom SSL)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Marketing Configuration
EMAIL_MARKETING_PROVIDER=mailchimp
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_LIST_ID=your-mailchimp-list-id

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Security
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
